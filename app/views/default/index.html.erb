<h1>Default#index</h1>
<% if user_signed_in? %>
  <%= link_to "Edit", edit_user_registration_path %>
  <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  <h2>リポジトリ一覧</h2>
  <% @repos.each do |repo| %>
    <p><%= link_to repo.full_name, repo.html_url, alt: repo.description %> <%= link_to "issues", issues_path(repo: repo.full_name) %> <%= link_to "burndownchart", burndownchart_index_path(repo: repo.full_name) %></p>
  <% end %>
<% else %>
  <%= link_to "Sign in", new_user_session_path %>
  <%= link_to "Sign in with Github", user_omniauth_authorize_path(:github) %>
<% end %>
