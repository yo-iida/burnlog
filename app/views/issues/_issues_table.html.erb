<table class="table table-striped">
  <thead>
    <tr>
      <th>issue title</th>
      <th>assignee</th>
      <th>labels</th>
      <th>created_at</th>
      <th>updated_at</th>
      <th>closed_at</th>
    </tr>
  </thead>
  <tbody>
    <% issues.each do |issue| %>
      <tr>
        <td><%= link_to issue.title, issue.html_url %></td>
        <td><%= issue.assignee.try(:login) %></td>
        <td><%= issue.labels.map(&:name).join(",") %></td>
        <td><%= issue.created_at.try(:in_time_zone, 'Tokyo') %></td>
        <td><%= issue.updated_at.try(:in_time_zone, 'Tokyo') %></td>
        <td><%= issue.closed_at.try(:in_time_zone, 'Tokyo') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
